#!/usr/bin/env node

const cli = require('../lib/cli');
const dev = require('../lib/dev');
const path = require('path');

const args = cli.setup({
    noArgs: true,
    options: [
        ['-p, --port <n>', '启动端口号', parseInt],
        ['-d, --dir <value>', '组件文件夹路径'],
        ['-l, --livereload', '启用调试自动刷新']
    ],
    help: [
          '启动MIP调试服务器',
          '    $ mip dev',
      ].join('\n')
});

dev(cli.program);
