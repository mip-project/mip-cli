#!/usr/bin/env node

const cli = require('../lib/cli');
const start = require('../lib/server');

const args = cli.setup({
    noArgs: true,
    options: [
        ['-p, --port <n>', '启动端口号', parseInt],
        ['-f, --force', '强制启动，关闭占用端口的进程'],
        ['-l, --livereload <value>', '启用调试自动刷新']
    ],
    help: [
          '启动MIP调试服务器',
          '    $ mip server',
      ].join('\n')
});

start();
