#!/usr/bin/env node

const cli = require('../lib/cli');
const validate = require('../lib/validate');

const args = cli.setup({
    usage: '<component-name>',
    help: [
        '',
        '  Examples:',
        cli.chalk.gray('    # 检查一个 mip 组件，输入组件目录'),
        '    $ mip2 validate ./mip-demo'
    ].join('\n')
});

validate({
    filePath: args[0]
});