#!/usr/bin/env node

const cli = require('../lib/cli');
const checkVersion = require('../lib/check-version');
const init = require('../lib/init');

const args = cli.setup({
    noArgs: true,
    usage: '[project-name]',
    help: [
        '',
        '  初始化 MIP 项目',
        '    $ mip2 init [project-name]',
    ].join('\n')
});

checkVersion().then(() => {
    init({
        rawName: args[0]
    });
});