#!/usr/bin/env node

const cli = require('../lib/cli');

const args = cli.setup({
    noArgs: true,
    usage: '[project-name]',
    help: [
        '',
        '  初始化 MIP 项目',
        '    $ mip2 init [project-name]',
    ].join('\n')
});

require('../lib/init').exec({
    force: cli.program.force,
    rawName: args[0]
});
